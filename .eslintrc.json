{
	"extends": "next/core-web-vitals",
	"plugins": ["react-hooks", "react"],
	"rules": {
		"no-var": "error",
		"arrow-body-style": ["error", "as-needed"],
		"@typescript-eslint/consistent-type-imports": "off",
		"react-hooks/exhaustive-deps": "error",
		"no-console": "warn",
		"max-len": ["error", 150],
		"no-plusplus": "error",
		"prefer-destructuring": "error"
	}
}
